<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card custom-card">
    <div class="card-body d-flex flex-column justify-content-center">
      <%= form_tag artists_path, method: :get, class: "input-group mb-3 search-bar", id: "search-form" do %>
        <div class="input-group-prepend">
          <span class="input-group-text search-icon" onclick="submitForm()"><i class="fas fa-search"></i></span>
        </div>
        <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search for artists" %>
      <% end %> <!-- Closing form_tag -->
      <% if @artists.present? %>
        <div class="card mt-3">
          <div class="card-body">
            <div class="row">
              <% @artists.each do |artist| %>
                <% if artist.images.any? %>
                  <div class="col-md-4 mb-3">
                    <div class="d-flex align-items-center">
                      <div class="rounded-circle mr-3 artist-image">
                        <%= image_tag artist.images.first['url'], class: "img-fluid rounded-circle" %>
                      </div>
                      <div class="d-flex flex-column">
                        <div class="name mb-2">
                          <%= artist.name %>
                        </div>
                        <div class="line"></div>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  function submitForm() {
    document.getElementById('search-form').submit();
  }
</script>
<%= link_to "Back", profile_path(@profile) %>
